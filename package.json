{
  "name": "bookme-app",
  "version": "1.0.0",
  "description": "A comprehensive ride-sharing comparison app built with React Native and Node.js",
  "main": "index.js",
  "scripts": {
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "backend": "cd backend && npm run dev",
    "frontend": "cd frontend && npx expo start",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend:build": "cd backend && npm run build",
    "frontend:build": "cd frontend && npx expo build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "react-native",
    "expo",
    "nodejs",
    "express",
    "mongodb",
    "ride-sharing",
    "maps",
    "authentication"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/bookme-app.git"
  },
  "bugs": {
